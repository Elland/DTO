  <%= image_tag "http://www.penguinpetes.com/Doomed_to_Obscurity/strips/#{@comic}.jpg", width: 1000 %>
  <h4>Showing comic <%= @comic.to_i %></h1>
  <br/>
  <%= link_to 'previous', prev_comics_path, accesskey: 'P' %>
  |
  <%= link_to 'next', next_comics_path, accesskey: 'N' %>
